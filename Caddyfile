{
    admin off
}

https://viken.stream:8443 {
    tls /etc/caddy/certs/viken.stream.crt /etc/caddy/certs/viken.stream.key

    @livekit {
        path /rtc* /twirp* /livekit* /ws
    }
    reverse_proxy @livekit livekit:7880 {
        transport http {
            versions h2c 1.1
        }
    }

    @token {
        path /token*
    }
    reverse_proxy @token token-server:8000

    root * /srv/www
    file_server
}
